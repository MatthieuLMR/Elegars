<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main"
                style="@style/activity"
                android:background="@drawable/fond1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choixrace"
            android:id="@+id/textChoixRace"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            style="@style/textDefault"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textChoixRace"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@+id/textChoixRace"
            android:id="@+id/linearLayout">

        <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:id="@+id/iBtnRaceHomme"
                android:background="@drawable/select_button"/>

        <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:id="@+id/iBtnRaceElfe"
                android:background="@drawable/select_button"/>

        <ImageButton
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:id="@+id/iBtnRaceNain"
                android:background="@drawable/select_button"/>

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/definitionRace"
            android:layout_below="@+id/linearLayout"
            android:layout_alignStart="@+id/linearLayout"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            style="@style/textDefault"/>

    <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"
            android:background="@drawable/button_parchemin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:text="@string/continuer"
            android:textSize="25dp"
            style="@style/btnPartie"
            android:id="@+id/iBtnRaceContinue"/>

</RelativeLayout>